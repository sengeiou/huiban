<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.activity.ClassActivity">
    <com.bshuiban.baselibrary.view.customer.TitleView
        android:id="@+id/titleView"
        style="@style/TitleView"
        app:title_text="班级"
        app:src_left="@mipmap/iv_back"
        app:right_color="@color/white"
        app:middle_show="true"/>
    <net.lucode.hackware.magicindicator.MagicIndicator
        android:id="@+id/magic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_47"
        app:layout_constraintTop_toBottomOf="@+id/titleView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/magic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>