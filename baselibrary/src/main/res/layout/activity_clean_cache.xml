<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".view.activity.CleanCacheActivity">

    <com.bshuiban.baselibrary.view.customer.TitleView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/guide_start_btn"
        app:src_left="@mipmap/iv_back"
        app:title_color="@android:color/white"
        app:title_size="@dimen/dp_15"
        app:title_text="清理缓存" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="已用空间"
        android:textColor="@color/tab_unselect"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_use_space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="@color/tab_unselect"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/tv_persent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text=""
        android:textColor="@color/tab_unselect"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_cache"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@color/guide_start_btn"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="清理慧班缓存"
        android:textColor="@android:color/white" />
</LinearLayout>