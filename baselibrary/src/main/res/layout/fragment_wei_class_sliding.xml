<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.bshuiban.baselibrary.view.fragment.SelectSlidingFragment">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_sure"
        android:layout_marginTop="@dimen/dp_10">

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.bszhihui.hbag_other.ui.view.EnterRadioGroup
                android:id="@+id/enterRadio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.bszhihui.hbag_other.ui.view.EnterRadioGroup>
            <LinearLayout
                android:id="@+id/ll_Zhang_Zhi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/tv_zhangjie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="章节"
                    android:textSize="@dimen/dp_12"
                    android:padding="10dp"
                    android:textColor="@color/guide_start_btn"/>
                <TextView
                    android:id="@+id/tv_zhishidian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="知识点"
                    android:padding="10dp"
                    android:layout_marginLeft="40dp"
                    android:textSize="@dimen/dp_12"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/guide_start_btn"
        android:gravity="center"
        android:text="确认"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dp_12"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"/>
</RelativeLayout>